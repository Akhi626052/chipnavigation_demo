<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/categories_id"
    android:background="@drawable/child_custom"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/categories_ig"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/balance_ic"
        android:layout_marginTop="10dp"
        android:background="@drawable/balance_bg"/>
    <TextView
        android:id="@+id/categories_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:text="Child Custody"/>
</LinearLayout>





</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_logo"
    tools:context=".Sign_Up">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Sign Up"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full name"
            android:padding="15dp"
            android:textSize="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="3dp"
            android:background="@drawable/signup_tv_bg" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Email"
            android:background="@drawable/signup_tv_bg"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="3dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your mobile number"
            android:background="@drawable/signup_tv_bg"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="3dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your state"
            android:background="@drawable/signup_tv_bg"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:elevation="3dp"
            android:textSize="16dp"
            android:layout_marginHorizontal="20dp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/signup_tv_bg"
    android:padding="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="20dp"
    android:elevation="3dp"
    android:orientation="horizontal">
    <EditText
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter your city"
        android:textSize="16dp"
        android:background="@color/white"/>
    <ImageView
       android:id="@+id/dropdown_id"
       android:layout_width="20dp"
       android:layout_height="20dp"
       android:paddingVertical="2dp"
       android:layout_toRightOf="@+id/tv_city"
       android:layout_centerVertical="true"
       android:layout_marginLeft="160dp"
       android:src="@drawable/drop_down_ic"/>
</RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your address"
            android:background="@drawable/signup_tv_bg"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:lines="3"
            android:gravity="top"
            android:elevation="3dp"
            android:layout_marginHorizontal="20dp" />

        <TextView
            android:id="@+id/signup_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/signup_bg"
            android:paddingHorizontal="70dp"
            android:paddingVertical="10dp"
            android:text="SIGN UP"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Already have an account?"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/parisGreen"
                android:textSize="14dp"
                android:layout_marginLeft="3dp"
                android:text="Login"/>



        </LinearLayout>




    </LinearLayout>

</ScrollView>
</LinearLayout>
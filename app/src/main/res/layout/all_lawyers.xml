<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AllLawyers">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/all_lawyer_bg">

    <RelativeLayout
        android:id="@+id/ser_all_back_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp">
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_ic"
            app:tint="@color/white"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="All Lawyer's"/>
        <ImageView
            android:id="@+id/searchNext"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search_ic"
            android:layout_alignParentEnd="true"
            app:tint="@color/white"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/filter_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/ser_all_back_rel"
        android:background="@drawable/filter_bg"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="18dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="35dp">

<ImageView
    android:id="@+id/slider_id"
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:src="@drawable/sliders"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/slider_id"
            android:layout_centerVertical="true"
            android:text="Filter"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/filter_second"
        android:layout_toRightOf="@+id/filter_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ser_all_back_rel"
        android:background="@drawable/filter_bg"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="18dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/sort_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="Sort by"/>

        <ImageView
            android:id="@+id/slider_id2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            app:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/sort_by"
            android:src="@drawable/drop_down"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/filter_Free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ser_all_back_rel"
        android:background="@drawable/filter_bg"
        android:layout_toRightOf="@+id/filter_second"
        android:layout_marginHorizontal="10dp"
        android:paddingHorizontal="27dp"
        android:paddingVertical="15dp"
        android:layout_marginTop="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:text="Free"/>

    </RelativeLayout>









</RelativeLayout>


<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/allawyers_rcy"/>











</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Filter">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/include_desig_border"
                android:paddingHorizontal="10dp"
                android:paddingVertical="30dp">
                <ImageView
                    android:id="@+id/Ima_backed"
                    android:layout_width="15dp"
                    android:padding="0dp"
                    android:layout_height="20dp"
                    app:tint="@color/white"
                    android:src="@drawable/back_ic"/>
                <TextView
                    android:id="@+id/textHeaders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Filter"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/password_bg"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/drop_state_id1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/drop_down"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="18dp"
                android:paddingVertical="15dp"
                android:paddingHorizontal="25dp"
                android:background="@drawable/password_bg"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_city"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14dp"
                    android:text="Select City"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/drop_city_id2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/drop_down"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="18dp"
                android:paddingVertical="15dp"
                android:paddingHorizontal="25dp"
                android:background="@drawable/password_bg"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_category"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14dp"
                    android:text="Select Category"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/drop_category_id3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/drop_down"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="18dp"
                android:paddingVertical="15dp"
                android:paddingHorizontal="25dp"
                android:background="@drawable/password_bg"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_courts"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14dp"
                    android:text="Select Courts"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/drop_courts_id4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/drop_down"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="18dp"
                android:paddingVertical="15dp"
                android:paddingHorizontal="25dp"
                android:background="@drawable/password_bg"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_Experience"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14dp"
                    android:text="Select experience"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/drop_Experience_id5"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/drop_down"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="18dp"
                android:paddingVertical="15dp"
                android:paddingHorizontal="25dp"
                android:background="@drawable/password_bg"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_ratings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14dp"
                    android:text="Select Ratings"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/drop_ratings_id6"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/drop_down"/>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="18dp"
                android:paddingVertical="15dp"
                android:paddingHorizontal="25dp"
                android:background="@drawable/password_bg"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14dp"
                    android:text="Select Gender"/>
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/drop_gender_id7"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/drop_down"/>
            </RelativeLayout>





        </LinearLayout>
    </ScrollView>
</LinearLayout>